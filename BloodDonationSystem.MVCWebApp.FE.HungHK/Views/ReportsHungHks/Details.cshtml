@model BloodDonationSystem.Repositories.HungHK.Models.ReportsHungHk

@{
    ViewData["Title"] = "Report Details";
}

<div class="container py-4" style="max-width: 800px;">
    <div class="text-center mb-4">
        <h4 class="fw-bold text-primary">Report Details</h4>
    </div>

    <div class="card border border-secondary shadow-sm bg-white rounded-4">
        <div class="card-body px-4 py-4">
            <dl class="row mb-0">
                <dt class="col-sm-4 fw-semibold text-muted">Report Date</dt>
                <dd class="col-sm-8">@Model.ReportDate</dd>

                <dt class="col-sm-4 fw-semibold text-muted">Total Users</dt>
                <dd class="col-sm-8">@Model.TotalUsers</dd>

                <dt class="col-sm-4 fw-semibold text-muted">Total Donors</dt>
                <dd class="col-sm-8">@Model.TotalDonors</dd>

                <dt class="col-sm-4 fw-semibold text-muted">Total Recipients</dt>
                <dd class="col-sm-8">@Model.TotalRecipients</dd>

                <dt class="col-sm-4 fw-semibold text-muted">Total Blood Units</dt>
                <dd class="col-sm-8">@Model.TotalBloodUnits</dd>

                <dt class="col-sm-4 fw-semibold text-muted">Total Requests</dt>
                <dd class="col-sm-8">@Model.TotalRequests</dd>

                <dt class="col-sm-4 fw-semibold text-muted">Total Donations</dt>
                <dd class="col-sm-8">@Model.TotalDonations</dd>

                <dt class="col-sm-4 fw-semibold text-muted">Most Needed Blood Type</dt>
                <dd class="col-sm-8">@Model.MostNeededBloodType</dd>

                <dt class="col-sm-4 fw-semibold text-muted">Status</dt>
                <dd class="col-sm-8">@Model.Status</dd>

                <dt class="col-sm-4 fw-semibold text-muted">Generated By</dt>
                <dd class="col-sm-8">@Model.GeneratedByNavigation?.UserName</dd>

                <dt class="col-sm-4 fw-semibold text-muted">Report Type</dt>
                <dd class="col-sm-8">@Model.ReportType?.TypeName</dd>
            </dl>
            <div class="d-flex justify-content-end mt-4">
                <a asp-action="Edit" asp-route-id="@Model.ReportHungHkid" class="btn btn-primary me-2 px-4">Edit</a>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">Back</a>
            </div>
        </div>
    </div>

    
</div>
