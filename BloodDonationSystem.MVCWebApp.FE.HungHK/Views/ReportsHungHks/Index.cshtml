@model BloodDonationSystem.Repositories.HungHK.ModelExtensions.PaginationResult<List<BloodDonationSystem.Repositories.HungHK.Models.ReportsHungHk>>

@{
    ViewData["Title"] = "Reports Index";
}


<h1 class="mb-4">Reports</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<div class="mb-3 w-100">
    <form asp-action="Index" method="get" class="row gx-2">
        <div class="col-md-3">
            <input type="number" name="totalUsers" value="@ViewBag.TotalUsers" class="form-control" placeholder="Total Users" />
        </div>
        <div class="col-md-3">
            <input type="text" name="mostNeededBloodType" value="@ViewBag.MostNeededBloodType" class="form-control" placeholder="Generated By" />
        </div>
        <div class="col-md-3">
            @Html.DropDownList("generatedBy", ViewBag.UserList as SelectList, "---Select User---", new { @class = "form-control" })
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary w-100">Search</button>
        </div>
    </form>
</div>


<div class="table-responsive" style="min-height: 340px; overflow-y: hidden;">
    <table class="table table-sm table-bordered text-center align-middle" style="font-size: 0.875rem;">
        <thead class="table-secondary fw-bold">
            <tr>
                <th style="width: 90px;">Date</th>
                <th style="width: 70px;">Users</th>
                <th style="width: 70px;">Donors</th>
                <th style="width: 90px;">Recipients</th>
                <th style="width: 70px;">Blood</th>
                <th style="width: 90px;">Requests</th>
                <th style="width: 90px;">Donations</th>
                <th style="width: 100px;">Blood Type</th>
                <th style="width: 90px;">IsActive</th>
                <th style="width: 100px;">User</th>
                <th style="width: 120px;">Type</th>
                <th style="width: 160px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr style="height: 48px;">
                    <td>@item.ReportDate</td>
                    <td>@item.TotalUsers</td>
                    <td>@item.TotalDonors</td>
                    <td>@item.TotalRecipients</td>
                    <td>@item.TotalBloodUnits</td>
                    <td>@item.TotalRequests</td>
                    <td>@item.TotalDonations</td>
                    <td>@item.MostNeededBloodType</td>
                    <td>@item.Status</td>
                    <td style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                        @item.GeneratedByNavigation?.UserName
                    </td>
                    <td style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                        @item.ReportType?.TypeName
                    </td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a asp-action="Edit" asp-route-id="@item.ReportHungHkid" class="btn btn-warning me-1 text-white">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.ReportHungHkid" class="btn btn-info me-1 ">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.ReportHungHkid" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (Model.TotalPage > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPage; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-totalUsers="@ViewBag.TotalUsers"
                       asp-route-generatedBy="@ViewBag.GeneratedBy"
                       asp-route-mostNeededBloodType="@ViewBag.MostNeededBloodType"
                       asp-route-currentPage="@i"
                       asp-route-pageSize="@Model.PageSize">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["SuccessMessage"] != null)
        {
                <text>
                    Swal.fire({
                        position: 'top-end', // 👈 Góc trên bên phải
                        icon: 'success',
                        title: 'Success',
                        text: '@TempData["SuccessMessage"]',
                        toast: true, // 👈 Hiển thị dạng toast nhỏ
                        timer: 3000,
                        timerProgressBar: true,
                        showConfirmButton: false
                    });
                </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
                <text>
                    Swal.fire({
                        position: 'top-end',
                        icon: 'error',
                        title: 'Error',
                        text: '@TempData["ErrorMessage"]',
                        toast: true,
                        timer: 3000,
                        timerProgressBar: true,
                        showConfirmButton: false
                    });
                </text>
        }
    </script>
}

